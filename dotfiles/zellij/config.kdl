default_shell "zsh"
default_layout "compact"
mouse_mode true
pane_frames false
simplified_ui true
theme "catppuccin-mocha"

ui {
    pane_frames {
        hide_session_name true
    }
}

keybinds {
    normal clear-defaults=true {
        bind "Alt -" { Resize "Decrease"; }
        bind "Alt =" { Resize "Increase"; }
        bind "Alt [" { GoToPreviousTab; SwitchToMode "Normal"; }
        bind "Alt ]" { GoToNextTab; SwitchToMode "Normal"; }
        bind "Alt h" { MoveFocus "Left"; SwitchToMode "Normal"; }
        bind "Alt j" { MoveFocus "Down"; SwitchToMode "Normal"; }
        bind "Alt k" { MoveFocus "Up"; SwitchToMode "Normal"; }
        bind "Alt l" { MoveFocus "Right"; SwitchToMode "Normal"; }
        bind "Alt n" { NewPane; SwitchToMode "Normal"; }
        bind "Ctrl f" { SwitchToMode "Tmux"; }
    }

    tmux clear-defaults=true {
        bind "-" { NewPane "Down"; SwitchToMode "Normal"; }
        bind "\\" { NewPane "Right"; SwitchToMode "Normal"; }
        bind "Ctrl s" { SwitchToMode "Scroll"; }
        bind "Backspace" { PreviousSwapLayout; SwitchToMode "Normal"; }
        bind "Enter" { SwitchToMode "Resize"; }
        bind "Esc" { SwitchToMode "Normal"; }
        bind "Space" { NextSwapLayout; SwitchToMode "Normal"; }
        bind "d" { Detach; }
        bind "m" { SwitchToMode "Move"; }
        bind "q" { Quit; }
        bind "r" { SwitchToMode "RenameTab"; TabNameInput 0; }
        bind "n" { NewTab; SwitchToMode "Normal"; }
        bind "x" { CloseFocus; SwitchToMode "Normal"; }
        bind "z" { ToggleFocusFullscreen; SwitchToMode "Normal"; }
        bind "s" { 
            LaunchOrFocusPlugin "zellij:session-manager" {
                floating true
                move_to_focused_tab true
            };
            SwitchToMode "Normal"
        }
    }
}
