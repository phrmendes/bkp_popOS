{
  "Home-manager service module": {
    "body": [
      "{",
      "  lib,",
      "  config,",
      "  ...",
      "}: {",
      "  options.${1:service}.enable = lib.mkEnableOption \"enable ${1}\";",
      "",
      "  config = lib.mkIf config.${1}.enable {",
      "    services.${1}.enable = true;",
      "  };",
      "}"
    ],
    "description": "Home-manager service module",
    "prefix": "shmm"
  },
  "Home-manager program module": {
    "body": [
      "{",
      "  lib,",
      "  config,",
      "  ...",
      "}: {",
      "  options.${1:program}.enable = lib.mkEnableOption \"enable ${1}\";",
      "",
      "  config = lib.mkIf config.${1}.enable {",
      "    programs.${1}.enable = true;",
      "  };",
      "}"
    ],
    "description": "Home-manager program module",
    "prefix": "hmm"
  },
  "Flake github input": {
    "body": [
      "${name}: {",
      "  flake = false;",
      "  url = \"github:${owner}/${repo}\";",
      "}"
    ]
  }
}
