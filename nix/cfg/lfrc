set preview true
set hidden true
set drawbox true
set icons true
set ignorecase true

# custom functions
cmd open ${{
    case $(file --mime-type "$f" -bL) in
        text/*|application/json) $EDITOR "$f";;
        *) xdg-open "$f" ;;
    esac
}}

cmd mkdir ${{
  printf "Directory name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File name: "
  read ans
  $EDITOR $ans
}}

cmd chmod ${{
  printf "Mode: "
  read ans

  for file in "$fx"
  do
    chmod $ans $file
  done

  lf -remote 'send reload'
}}

cmd zip %zip -r "$f" "$f"
cmd tar %tar cvf "$f.tar" "$f"
cmd targz %tar cvzf "$f.tar.gz" "$f"
cmd tarbz2 %tar cjvf "$f.tar.bz2" "$f"

# bindings
## remove some defaults
map m
map o
map n
map "'"
map '"'
map d
map c
map e
map f

# file openers
map ee $$EDITOR "$f"
map u $view "$f"

# archive mappings
map az zip
map at tar
map ag targz
map ab targz
map au unarchive