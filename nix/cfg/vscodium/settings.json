{
  "editor.cursorBlinking": "solid",
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontLigatures": true,
  "editor.fontSize": 18,
  "editor.formatOnType": true,
  "editor.guides.indentation": false,
  "editor.inlayHints.enabled": "on",
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.suggestSelection": "first",
  "explorer.confirmDelete": false,
  "files.hotExit": "off",
  "indentRainbow.indicatorStyle": "light",
  "joplin.token": "4e7d26f60216d674fa14b0d27edccddde82888646181b02d48cf90db7b362fc2071865bbfd2061b0bc9e55c02a53961415d825c56282ab1bedd05475255a22c3",
  "ltex.additionalRules.enablePickyRules": true,
  "ltex.additionalRules.motherTongue": "pt-BR",
  "ltex.enabled": ["quarto", "latex", "markdown"],
  "ltex.language": "pt-BR",
  "mdmath.autosave": false,
  "mdmath.delimiters": "dollars",
  "mdmath.macroFile": "./macros.json",
  "mdmath.macros": {},
  "mdmath.outerspace": false,
  "mdmath.savePath": "./${file.name}.html",
  "mdmath.silent": false,
  "mdmath.style": "",
  "mdmath.theme": "default",
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.external.linuxExec": "/usr/bin/wezterm",
  "terminal.external.osxExec": "WezTerm.app",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font'",
  "vim.easymotion": true,
  "vim.hlsearch": true,
  "vim.inccommand": "replace",
  "vim.incsearch": true,
  "vim.leader": "<Space>",
  "vim.smartcase": true,
  "vim.surround": true,
  "vim.timeout": 2000,
  "vim.useSystemClipboard": true,
  "window.menuBarVisibility": "hidden",
  "window.restoreWindows": "none",
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.editor.restoreViewState": false,
  "workbench.editor.showTabs": true,
  "workbench.iconTheme": "catppuccin-mocha",
  "workbench.startupEditor": "none",
  "editor.codeActionsOnSave": {
    "source.fixAll.markdownlint": true
  },
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "terminal.integrated.profiles.linux": {
    "zsh": {
      "path": "zsh",
      "icon": "terminal-bash"
    }
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-h>"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["<C-j>"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["<C-k>"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["<C-l>"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    {
      "before": ["<S-h>"],
      "commands": [":bprevious"]
    },
    {
      "before": ["<S-l>"],
      "commands": [":bnext"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["leader", "/"],
      "commands": ["fuzzySearch.activeTextEditor"]
    },
    {
      "before": ["leader", "-"],
      "commands": [":split"]
    },
    {
      "before": ["leader", "\\"],
      "commands": [":vsplit"]
    },
    {
      "before": ["leader", "x"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["leader", "q"],
      "commands": [":q!"]
    },
    {
      "before": ["leader", "z"],
      "commands": ["workbench.action.toggleZenMode"]
    },
    {
      "before": ["leader", "b", "b"],
      "commands": ["workbench.action.showAllEditorsByMostRecentlyUsed"]
    },
    {
      "before": ["leader", "b", "d"],
      "commands": [":bd"]
    },
    {
      "before": ["leader", "b", "n"],
      "commands": [":enew"]
    },
    {
      "before": ["leader", "c", "h"],
      "commands": [":nohl"]
    },
    {
      "before": ["leader", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["leader", "f", "s"],
      "commands": [":w!"]
    },
    {
      "before": ["leader", "f", "d"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"],
      "when": "editorTextFocus"
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.rename"],
      "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
    },
    {
      "before": ["g", "d"],
      "commands": ["editor.action.goToDefinition"],
      "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
    },
    {
      "before": ["g", "D"],
      "commands": ["editor.action.goToDeclaration"]
    },
    {
      "before": ["g", "p", "d"],
      "commands": ["editor.action.peekDefinition"],
      "when": "editorHasDefinitionProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
    },
    {
      "before": ["g", "p", "i"],
      "commands": ["editor.action.peekImplementation"],
      "when": "editorHasImplementationProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": ["="],
      "commands": ["workbench.action.increaseViewSize"]
    },
    {
      "before": ["-"],
      "commands": ["workbench.action.decreaseViewSize"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<S-j>"],
      "commands": ["editor.action.moveLinesDownAction"]
    },
    {
      "before": ["<S-k>"],
      "commands": ["editor.action.moveLinesUpAction"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<S-j>"],
      "commands": ["editor.action.moveLinesDownAction"]
    },
    {
      "before": ["<S-k>"],
      "commands": ["editor.action.moveLinesUpAction"]
    }
  ],
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["j", "k"],
      "after": ["<ESC>"]
    }
  ]
}
