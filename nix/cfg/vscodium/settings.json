{
  "editor.cursorBlinking": "solid",
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 18,
  "editor.formatOnType": true,
  "editor.guides.indentation": false,
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.suggestSelection": "first",
  "explorer.confirmDelete": false,
  "files.hotExit": "off",
  "git.autofetch": true,
  "git.confirmSync": false,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.external.linuxExec": "/usr/bin/wezterm",
  "terminal.external.osxExec": "WezTerm.app",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font'",
  "window.menuBarVisibility": "hidden",
  "window.restoreWindows": "none",
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.editor.restoreViewState": false,
  "workbench.editor.showTabs": true,
  "workbench.iconTheme": "catppuccin-mocha",
  "workbench.startupEditor": "none",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "bash",
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "zsh",
      "icon": "terminal-bash"
    }
  },
  "redhat.telemetry.enabled": false,
  "ltex.additionalRules.enablePickyRules": true,
  "ltex.additionalRules.motherTongue": "pt-BR",
  "ltex.language": "pt-BR",
  "ltex.enabled": ["quarto", "bibtex", "html", "latex", "markdown"],
  "vim.easymotion": true,
  "vim.hlsearch": true,
  "vim.inccommand": "replace",
  "vim.incsearch": true,
  "vim.leader": "<Space>",
  "vim.smartcase": true,
  "vim.surround": true,
  "vim.timeout": 2000,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["leader", "q"],
      "commands": [":q!"]
    },
    {
      "before": ["leader", "z"],
      "commands": ["workbench.action.toggleZenMode"]
    },
    {
      "before": ["leader", "c", "h"],
      "commands": [":nohl"]
    },
    {
      "before": ["leader", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["leader", "space"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["leader", "."],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": ["<S-h>"],
      "commands": [":bprevious"]
    },
    {
      "before": ["<S-l>"],
      "commands": [":bnext"]
    },
    {
      "before": ["leader", "b", "b"],
      "commands": ["workbench.action.showAllEditorsByMostRecentlyUsed"]
    },
    {
      "before": ["leader", "b", "d"],
      "commands": [":bd"]
    },
    {
      "before": ["leader", "b", "n"],
      "commands": [":enew"]
    },
    {
      "before": ["<C-h>"],
      "after": ["<C-w>", "h"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<C-w>", "j"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<C-w>", "k"]
    },
    {
      "before": ["<C-l>"],
      "after": ["<C-w>", "l"]
    },
    {
      "before": ["leader", "s"],
      "commands": [":split"]
    },
    {
      "before": ["leader", "v"],
      "commands": [":vsplit"]
    },
    {
      "before": ["leader", "x"],
      "after": ["<C-w>", "q"]
    },
    {
      "before": ["leader", "f", "s"],
      "commands": [":w!"]
    },
    {
      "before": ["leader", "f", "b"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["leader", "g", "g"],
      "commands": ["magit.status"]
    },
    {
      "before": ["leader", "g", "c"],
      "commands": ["git.commit"]
    },
    {
      "before": ["leader", "g", "C"],
      "commands": ["git.checkout"]
    },
    {
      "before": ["leader", "g", "p"],
      "commands": ["magit.pulling"]
    },
    {
      "before": ["leader", "g", "P"],
      "commands": ["magit.pushing"]
    },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.rename"],
      "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
    },
    {
      "before": ["g", "d"],
      "commands": ["editor.action.goToDefinition"]
    },
    {
      "before": ["g", "D"],
      "commands": ["editor.action.goToDeclaration"]
    },
    {
      "before": [",", "j"],
      "after": ["leader", "leader", "leader", "j"]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": ["="],
      "commands": ["workbench.action.increaseViewSize"]
    },
    {
      "before": ["-"],
      "commands": ["workbench.action.decreaseViewSize"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<S-j>"],
      "commands": ["editor.action.moveLinesDownAction"]
    },
    {
      "before": ["<S-k>"],
      "commands": ["editor.action.moveLinesUpAction"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<S-j>"],
      "commands": ["editor.action.moveLinesDownAction"]
    },
    {
      "before": ["<S-k>"],
      "commands": ["editor.action.moveLinesUpAction"]
    }
  ],
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["j", "k"],
      "after": ["<ESC>"]
    }
  ]
}
